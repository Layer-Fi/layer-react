{
  "name": "@layerfi/components",
  "version": "0.1.99-alpha",
  "description": "Layer React Components",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs"
    },
    "./index.css": "./dist/index.css",
    "./dist/styles/index.css": "./dist/index.css"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "node bin/build.js",
    "build:clean": "rm -rf ./dist && npm run build",
    "dev": "node bin/build.js -- --watch",
    "prepack": "npm run typecheck && npm run build:clean",
    "lint": "eslint . && stylelint '**/*.{css,scss}'",
    "lint:eslint": "eslint .",
    "lint:stylelint": "stylelint '**/*.{css,scss}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Layer-Fi/layer-react.git"
  },
  "keywords": [
    "layerfi",
    "accounting",
    "react"
  ],
  "author": "Layer Financial",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/Layer-Fi/layer-react/issues"
  },
  "homepage": "https://github.com/Layer-Fi/layer-react#readme",
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^4.2.0",
    "@stylistic/stylelint-config": "^2.0.0",
    "@stylistic/stylelint-plugin": "^3.1.2",
    "@types/lodash": "^4.17.16",
    "@types/pluralize": "^0.0.33",
    "@types/react": "^18.2.0",
    "@types/react-datepicker": "^6.2.0",
    "@types/react-dom": "^18.2.0",
    "esbuild": "^0.25.3",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^9.26.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "lodash": "^4.17.21",
    "npm-dts": "^1.3.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.8",
    "@tanstack/react-form": "^1.9.1",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "libphonenumber-js": "^1.12.7",
    "lucide-react": "^0.507.0",
    "pluralize": "^8.0.0",
    "react-aria-components": "^1.8.0",
    "react-currency-input-field": "^3.10.0",
    "react-datepicker": "^6.9.0",
    "react-plaid-link": "^4.0.1",
    "react-select": "^5.10.1",
    "recharts": "^2.15.3",
    "swr": "^2.3.3",
    "zustand": "^5.0.4"
  }
}
