{
  "name": "@layerfi/components",
  "version": "0.1.0",
  "description": "Layer React Components",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "build": "node bin/build.js",
    "prepack": "npm run typecheck && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Layer-Fi/layer-react.git"
  },
  "keywords": ["layerfi", "accounting", "react"],
  "author": "Layer Financial",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/Layer-Fi/layer-react/issues"
  },
  "homepage": "https://github.com/Layer-Fi/layer-react#readme",
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@trivago/prettier-plugin-sort-imports": "^4.2.1",
    "@types/jest": "^29.5.7",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "esbuild": "^0.19.5",
    "esbuild-jest": "^0.5.0",
    "esbuild-sass-plugin": "^2.16.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^22.1.0",
    "npm-dts": "^1.3.12",
    "postcss": "^8.4.31",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "react-select": "^5.8.0",
    "recharts": "^2.10.1",
    "swr": "^2.2.4"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
      "^react.*",
      "<THIRD_PARTY_MODULES>",
      "^src",
      "^\\.\\./', ^\\./"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    },
    "setupFilesAfterEnv": ["<rootDir>/src/test/setupAfterEnv.ts"],
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/test/mocks/styleMock.js"
    }
  }
}
